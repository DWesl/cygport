_USE_GIT_FETCH=1

if [ -z "${GIT_URI}" ]
then
	error "GIT_URI must be defined"
fi

GIT_URI=${GIT_URI%/}
GIT_MODULE=${GIT_URI##*/}
GIT_MODULE=${GIT_MODULE%.git}
		
SRC_URI="${GIT_MODULE}-${PV}.tar.bz2"
SRC_DIR="${GIT_MODULE}"

git_fetch() {
	check_prog_req git

	# T likely doesn't exist at this point, so create it first
	mkdir -p ${T}
	cd ${T}
	verbose git clone -q ${GIT_URI} ${GIT_MODULE}
	if [ -n "${GIT_BRANCH}" ]
	then
		cd ${T}/${GIT_MODULE}
		verbose git checkout ${GIT_BRANCH}
		cd ${T}
	fi

	tar jcf ${top}/${SRC_URI} --exclude=.git ${GIT_MODULE}
}
