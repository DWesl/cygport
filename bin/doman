#!/bin/bash
################################################################################
#
# doman - installs manual pages to install path
# Part of cygport - Cygwin packaging application
# Copyright (C) 2006 Yaakov Selkowitz
# Provided by the Cygwin Ports project <http://cygwinports.dotsrc.org/>
# Distributed under the terms of the GNU General Public License v2
#
# $Id: doman,v 1.4 2006-11-20 05:48:58 yselkowitz Exp $
#
################################################################################
set -e

mandir=/usr/share/man

for i in "${@}"
do
	if [ ! -e ${i} ]
	then
		error "file ${i} does not exist"
	fi

	case ${i} in
		*.1|*.1m|*.1x|*.1.bz2|*.1.gz)
			mansection=1
			;;
		*.3|*.3pm|*.3t)
			mansection=3
			;;
		*.4)
			mansection=4
			;;
		*.5)
			mansection=5
			;;
		*.6|*.6x)
			mansection=6
			;;
		*.7)
			mansection=7
			;;
		*.8)
			mansection=8
			;;
		*)
			error "unknown man section"
			;;
	esac
	
	dodir ${mandir}/man${mansection}
	/bin/install -m0644 ${i} ${D}${mandir}/man${mansection} || error "doman ${i} failed"
done
