#!/bin/bash
################################################################################
#
# newexe - installs executable into exeinto directory with new name
# Part of cygport - Cygwin packaging application
# Copyright (C) 2006 Yaakov Selkowitz
# Provided by the Cygwin Ports project <http://cygwinports.dotsrc.org/>
# Distributed under the terms of the GNU General Public License v2
#
# $Header: /usr/src/cygport/tmp/cygport/bin/newexe,v 1.3 2006-11-20 02:53:00 yselkowitz Exp $
#
################################################################################
set -e

if [ -z "${_exeinto_dir}" -o ! -d ${D}${_exeinto_dir} ]
then
	error: "exeinto must be called before newexe"
fi

if [ ! -e ${1} ]
then
	error "file ${1} does not exist"
fi

/bin/install -m0755 ${1} ${D}${_exeinto_dir}/${2} || error "newexe ${1} failed"
