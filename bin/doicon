set -e

pixmapsdir=/usr/share/pixmaps

dodir ${pixmapsdir}

for i
do
	if [ ! -e ${i} ]
	then
		error "file ${i} does not exist"
	fi

	/bin/install -m0644 ${i} ${D}${pixmapsdir} || error "doicon ${i} failed"
done
