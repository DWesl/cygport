#!/bin/bash
################################################################################
#
# make_desktop_entry - creates custom desktop menu into install path
# Part of cygport - Cygwin packaging application
# Copyright (C) 2006 Yaakov Selkowitz
# Provided by the Cygwin Ports project <http://cygwinports.dotsrc.org/>
# Distributed under the terms of the GNU General Public License v2
#
# $Header: /usr/src/cygport/tmp/cygport/bin/make_desktop_entry,v 1.3 2006-11-20 02:53:00 yselkowitz Exp $
#
################################################################################
set -e

dodir /usr/share/applications

if [ -z "${1}" -o -z "${2}" ]
then
	error "requires a minimum of two arguments"
fi

cat > ${D}/usr/share/applications/${1%% *}.desktop <<-_EOF
	[Desktop Entry]
	Encoding=UTF-8
	Name=${2}
	Type=Application
	Comment=${5}
	Exec=${1}
	TryExec=${1}
	Path=
	Icon=${3}
	Categories=Application;${4};
	_EOF
