#!/bin/bash
################################################################################
#
# dosbin - installs executable to install path sbindir
# Part of cygport - Cygwin packaging application
# Copyright (C) 2006 Yaakov Selkowitz
# Provided by the Cygwin Ports project <http://cygwinports.dotsrc.org/>
# Distributed under the terms of the GNU General Public License v2
#
# $Header: /usr/src/cygport/tmp/cygport/bin/dosbin,v 1.3 2006-11-20 02:53:00 yselkowitz Exp $
#
################################################################################
set -e

sbindir=/usr/sbin

dodir ${sbindir}

for i in "${@}"
do
	if [ ! -e ${i} ]
	then
		error "file ${i} does not exist"
	fi

	/bin/install -m0755 ${i} ${D}${sbindir} || error "dosbin ${i} failed"
done

