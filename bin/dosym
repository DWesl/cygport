#!/bin/bash
################################################################################
#
# dosym - creates symlink to install path
# Part of cygport - Cygwin packaging application
# Copyright (C) 2006, 2007 Yaakov Selkowitz
# Provided by the Cygwin Ports project <http://cygwinports.dotsrc.org/>
# Distributed under the terms of the GNU General Public License v2
#
# $Id: dosym,v 1.6 2007-03-14 15:56:05 yselkowitz Exp $
#
################################################################################
set -e

_argv=(${0} ${@})
_argc=$#

if ((_argc < 2))
then
	error "dosym: requires at least two arguments"
fi

dest="${_argv[${_argc}]}"

# cd should allow for relative symlinks
# e.g. dosym ../../share/foo /usr/lib/
if [ -d ${D}${dest} ]
then
	cd ${D}${dest}
elif [ -d ${D}${dest%/*} ]
then
	cd ${D}${dest%/*}
else
	error "dosym: ${dest%/*} is not a directory"
fi

ln -sf ${_argv[*]:1:$((_argc - 1))} ${D}${dest} || error "dosym failed"
