set -e

libdir=/usr/lib

dodir ${libdir}

for i
do
	if [ ! -e ${i} ]
	then
		error "file ${i} does not exist"
	fi

	/bin/install -m0644 ${i} ${D}${libdir} || error "dolib ${i} failed"
done
